<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <style>
                   /* Global styles */
                   body {
                font-family: Arial, sans-serif;
                background-color: #f4f4f4;
                margin: 0;
                padding: 20px;
            }

            h1 {
                text-align: center;
                color: #333;
                margin-bottom: 20px;
            }

            /* Product list styles */
            .product-list {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
                gap: 20px;
                max-width: 1200px;
                margin: 0 auto;
            }

            .product-item {
                background-color: #fff;
                border: 1px solid #ddd;
                border-radius: 10px;
                padding: 15px;
                text-align: center;
                transition: box-shadow 0.3s ease;
            }

            .product-item:hover {
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

            .product-image {
                max-width: 100%;
                height: auto;
                border-radius: 10px;
                margin-bottom: 10px;
            }

            h2 {
                font-size: 1.5em;
                color: #333;
                margin: 10px 0;
            }

            p {
                font-size: 1.2em;
                color: #666;
            }

            /* Button styles */
            .btn {
                display: flex;
                justify-content: space-between;
            }

            .btnbutton {
                background-color: #007bff;
                color: #fff;
                border: none;
                border-radius: 5px;
                padding: 10px 20px;
                cursor: pointer;
                transition: background-color 0.3s;
            }

            .btnbutton:hover {
                background-color: #0056b3;
            }

            .btnbutton.delete {
                background-color: #dc3545;
            }

            .btnbutton.delete:hover {
                background-color: #c82333;
            }
        </style>
</head>

<body>
    <%- include('header') %>
    <h1>Product List</h1>
    <div class="product-list">
        <% products.forEach(product => { %>
            <div class="product-item">
                <img src="<%= product.ProductUrl %>" alt="<%= product.title %>" class="product-image">
                <h2><%= product.title %></h2>
                <p>Price: Rs.<%= product.price %></p>
                <div class="btn">
                    <form action="/user/delet" method="POST" style="display:inline;">
                        <input type="hidden" name="productId" value="<%= product._id %>">
                        <button type="submit" class="btnbutton delete">Delete</button>
                    </form>
                    <form action="/user/Update/<%= product._id %>" method="GET" style="display:inline;">
                        <button type="submit" class="btnbutton">Update</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>

